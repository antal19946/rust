# RPC Endpoints
# Use local BSC node for optimal performance
HTTP_RPC=http://localhost:8545
WS_RPC=ws://localhost:8546

# Wallet Configuration
# Your private key (keep secure!)
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Token Addresses
# BSC USDT address
USDT_ADDRESS=0x55d398326f99059fF775485246999027B3197955

# Performance Settings
# Minimum profit threshold (0.1% = 0.001)
MIN_PROFIT_THRESHOLD=0.001
# Maximum gas price in gwei
MAX_GAS_PRICE=20
# Slippage tolerance (0.5% = 0.005)
SLIPPAGE_TOLERANCE=0.005

# Advanced Settings
# HugePages cache size in MB (8192 = 8GB)
HUGEPAGES_CACHE_SIZE=8192
# CPU core for arbitrage execution
ARBITRAGE_CPU_CORE=0
# Background task CPU core
BACKGROUND_CPU_CORE=1
# Monitoring CPU core
MONITORING_CPU_CORE=2

# Network Settings
# RPC timeout in milliseconds
RPC_TIMEOUT=5000
# WebSocket reconnect interval
WS_RECONNECT_INTERVAL=1000
# Maximum concurrent RPC requests
MAX_CONCURRENT_REQUESTS=100

# Arbitrage Settings
# Maximum number of hops in arbitrage path
MAX_HOPS=4
# Minimum liquidity threshold in USDT
MIN_LIQUIDITY_THRESHOLD=1000
# Maximum trade size in USDT
MAX_TRADE_SIZE=10000
# Gas limit for arbitrage transactions
GAS_LIMIT=500000

# Safety Settings
# Minimum holder count for token safety
MIN_HOLDER_COUNT=100
# Maximum owner percentage for token safety
MAX_OWNER_PERCENTAGE=50.0
# Enable honeypot detection
ENABLE_HONEYPOT_DETECTION=true
# Enable blacklist checking
ENABLE_BLACKLIST_CHECKING=true

# Logging Settings
# Log level (debug, info, warn, error)
LOG_LEVEL=info
# Enable performance logging
ENABLE_PERFORMANCE_LOGGING=true
# Log file path
LOG_FILE_PATH=run.log
# Arbitrage opportunities log file
ARBITRAGE_LOG_FILE=arbitrage_opportunities.log

# Monitoring Settings
# Performance report interval in seconds
PERFORMANCE_REPORT_INTERVAL=60
# Memory usage monitoring
ENABLE_MEMORY_MONITORING=true
# CPU usage monitoring
ENABLE_CPU_MONITORING=true
# Network latency monitoring
ENABLE_NETWORK_MONITORING=true 